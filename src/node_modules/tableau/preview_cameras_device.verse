
using. /Fortnite.com/Devices
using. /Verse.org/Simulation
using. /Fortnite.com/Characters

preview_cameras_device := class(creative_device):
    @editable Delay:float = 3.0
    @editable Cameras:[]gameplay_camera_fixed_angle_device = array{}
    var CurrentPlayer:?agent = false

    OnBegin<override>()<suspends>:void=
        set CurrentPlayer = option. GetPlayspace().GetPlayers()[0]
        var CurrentCamera:int = Cameras.Length - 1
        loop:
            if:
                Agent := CurrentPlayer?
                Current := Cameras[CurrentCamera]
                NextCamera := if (CurrentCamera = Cameras.Length - 1). 0 else. CurrentCamera + 1
                Next := Cameras[NextCamera]
            then:
                Next.AddTo(Agent)
                Current.RemoveFrom(Agent)
                set CurrentCamera = NextCamera
            Sleep(Delay)

    HidePlayer(Agent:agent):void=
        if (Char := Agent.GetFortCharacter[]). Char.Hide()
