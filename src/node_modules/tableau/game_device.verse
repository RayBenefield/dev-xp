CreateBasicResource<public><constructor>(Name:string) := resource:
    ID := Name
    StatProps := props:
        Strs := array:
            prop_str{ ID := "Name", Default := Name }
    Props := props:
        Nums := array:
            prop_num{ ID := "Count", Default := num{} }
    Abilities := array:
        ability:
            ID := "Increase Count"
            Effects := array:
                effect{ FN := "Increase", Pay := load. Str := "Count" }
                effect{ FN := "Set Property", Pay := load. Str := "Count" }

