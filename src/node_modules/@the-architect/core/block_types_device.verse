
using. /Verse.org/Simulation
using. /Fortnite.com/Devices

using. Tableau
using. Vertex

block_settings<public> := class<concrete>():
    @editable ID<public>:string = "Block Type"
    @editable Base<public>:logic = true
    @editable Stackable<public>:logic = true

CreateBlockResource<constructor>(S:block_settings) := resource:
    ID := S.ID
    Type := "Block Type"
    Props := map:
        "Base" => Bool of S.Base
        "Stackable" => Bool of S.Stackable

block_types_device<public> := class(creative_device, config_device):
    GetResources<override>():[]resource=
        for (BlockType:BlockMeshes.Keys()):
            CreateBlockResource of block_settings:
                ID := BlockType
                Base := if(BaseBlocks.Find[BlockType]). true else. false
                Stackable := if(NotStackableBlocks.Find[BlockType]). false else. true
