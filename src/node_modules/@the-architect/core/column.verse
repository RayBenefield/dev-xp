
using. /Fortnite.com/Devices
using. /Verse.org/Simulation
using. /UnrealEngine.com/Temporary/SpatialMath

using. Tableau
using. TableauDevice
using. TableauEffect
using. TableauResource

column_device<public> := class(creative_device, config_device, side_effect_device):
    @editable TypeID:string = "Column"

    GetResources<override>():[]resource= array:
        resource:
            Type := TypeID
            Props := map:
                "ONE" => prop_int. Default := 1
                "Height" => prop_int{}
                "Exists" => prop_bool. Default := true
                "Next Height" => prop_int{ Focus := Path("Height"), FN := "+", Tweak := Path("ONE") }
            Abilities := map:
                "Increase Height" => ability. Effects := array:
                    Set("Height").To("Next Height")

    GetResourceID<override>()<computes>:?string= false
    GetPerType<override>()<computes>:?string= option. TypeID
    GetPerSubType<override>()<computes>:?string= false
    GetSideEffects<override>(State:scoped_state)<suspends>:[]side_effect= array{}
        # Debug("Height", "{State.Source} Height")
        # Debug("Next Height", "{State.Source} Next Height")

