
using { /Fortnite.com/Devices }
using { /Verse.org/Simulation }
using { /UnrealEngine.com/Temporary/Diagnostics }
using { /Verse.org/Simulation/Tags }

using { TableauAgent }

collection_tag := class(tag){}

collection_device<public> := class(creative_device):

    # Device Properties
    @editable Timer:float = 1.0

    # Commands
    CollectCommand<public>:event() = event(){}

    Initialize<public>()<suspends>:void=
        loop:
            Sleep(Timer)
            CollectCommand.Signal()

LoadCollectionDevices<public>():[]collection_device=
    TaggedDevices := GetCreativeObjectsWithTag(collection_tag{})
    for(Index -> Tagged : TaggedDevices, Device := collection_device[Tagged]). Device
