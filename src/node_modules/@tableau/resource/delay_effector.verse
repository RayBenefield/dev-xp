
using { /Verse.org/Simulation }

using { Tableau }

delay_effector<public> := class(effector):
    GameState<public>:game_state

    Play<override>(Source:string, Activator:string, Focus:prop_path, Pay:load)<suspends>:?[]command=
        ParticipantID := Activator
        Delay := if (Focus.PropertyID = ""):
            Pay.Float
        else. GameState.GetFloatProp(Source, Focus, ParticipantID).Latest
        Sleep(Delay)

        return option. array{}
