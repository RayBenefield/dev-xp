
using. /UnrealEngine.com/Temporary/SpatialMath

using. Banding
using. Vertex

hydrated_resource := class():
    var ID:string = ""
    var Type:string = ""
    var StringProperties:[string]string = map{}
    var Vec3Properties:[string]vector3 = map{}

    Dehydrate<public>():resource= resource:
        ID := ID
        Type := Type
        Props := CombineAll of array:
            CreateMap of for(PropID->Prop:StringProperties). (PropID, Str of Prop)
            CreateMap of for(PropID->Prop:Vec3Properties). (PropID, Vec3 of Prop)

ToString(Resource:hydrated_resource):string=
    Tab("RESOURCE [{Resource.ID}]({Resource.Type}))") +
        WithIndent(Resource.StringProperties.DebugStringMap("Hydrated Strings")) +
        WithIndent(Resource.Vec3Properties.ToStringMap().DebugStringMap("Hydrated Vector3s")) +
    EndTab()
