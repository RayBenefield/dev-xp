    var Ints<public>:[string]int_vm = map{}
    var Nums<public>:[string]num_vm = map{}
    var Floats<public>:[string]float_vm = map{}
    var Bools<public>:[string]bool_vm = map{}
    var Strs<public>:[string]str_vm = map{}
