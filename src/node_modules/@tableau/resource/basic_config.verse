
using { /Fortnite.com/Devices }
using { /Verse.org/Simulation }

using { Tableau }

basic_settings<public> := class<concrete>():
    @editable ID:string = ""

CreateBasicResource<public><constructor>(Name:string) := resource:
    ID := Name
    StatProps := props:
        Strs := array:
            prop_str{ ID := "Name", Default := Name }
    Props := props:
        Nums := array:
            prop_num{ ID := "Count", Default := num. Value := 5.0 }
    Abilities := array:
        ability:
            ID := "Increase Count"
            Effects := array:
                effect{ FN := "Increase", Focus := option. Path("Count") }
                # effect{ FN := "Set Property", Pay := load. Str := "Count" }

basic_config<public> := class(creative_device, config_device):
    @editable BasicSettings<public>:[]basic_settings = array{}

    GetResources<override>():[]resource=
        for (P:BasicSettings):
            CreateBasicResource(P.ID)
