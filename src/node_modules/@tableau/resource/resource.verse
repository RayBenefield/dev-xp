using { /Verse.org/Simulation }

using { Tableau }

CopyResource<constructor>(Old:resource)<transacts> := resource:
    ID := Old.ID
    Name := Old.Name
    StaticProperties := Old.StaticProperties
    Properties := Old.Properties
    Abilities:= Old.Abilities

property<public> := class<concrete>():
    @editable ID<public>:string = ""
    @editable Default<public>:num = num{}

ability<public> := class<concrete>():
    @editable ID<public>:string = ""

resource<public> := class<unique><concrete>():
    @editable ID<public>:int = 0
    @editable Name<public>:string = ""
    @editable StaticProperties<public>:[]property = array{}
    @editable Properties<public>:[]property = array{}
    @editable Abilities<public>:[]ability = array{}
