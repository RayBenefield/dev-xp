
using. /Fortnite.com/Devices
using. /Verse.org/Simulation

using. Vertex

CreateRemappedResource(ID:string, SourceID:string, Actions:[]action_remap):resource= resource:
    ID := ID
    Actions := CreateMap of for(AID:Actions). (AID.TargetAction, Action of (SourceID, AID.SourceAction))

action_remap := class<concrete>():
    @editable TargetAction:string = "Target Action"
    @editable SourceAction:string = "Source Action"

remap_device<public> := class(tableau_device):
    @editable SourceID:string = "Source"
    @editable ResourceID<override>:string = "Target"
    @editable Actions:[]action_remap = array{}

    GetResources<override>():[]resource= array. CreateRemappedResource(ResourceID, SourceID, Actions)
