
using. /Fortnite.com/Devices
using. /Verse.org/Simulation

using. Vertex

CreateBundledResource(ID:string, Actions:[]bundle_remap):resource= resource:
    ID := ID
    Actions := CreateMap of for(AID:Actions). (AID.TargetAction, Action of AID.SourceAction)

bundle_remap := class<concrete>():
    @editable TargetAction:string = "New Action"
    @editable SourceAction:prop_path = prop_path{}

bundle_device<public> := class(tableau_device):
    @editable ResourceID<override>:string = "New Resource"
    @editable Actions:[]bundle_remap = array{}

    GetResources<override>():[]resource= array. CreateBundledResource(ResourceID, Actions)
