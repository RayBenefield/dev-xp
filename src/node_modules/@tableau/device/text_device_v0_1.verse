
using. /Verse.org/Simulation
using. /Fortnite.com/Devices

text_device<public> := class(tableau_device):
    @editable ResourceID<override>:string = "Text"
    @editable Base:string = ""
    @editable BaseSource:?prop_path = false
    @editable Extra:string = ""
    @editable ExtraSource:?prop_path = false
    @editable MaybeSource:?prop_path = false
    @editable Alt:string = ""
    @editable AltSource:?prop_path = false

    GetResources<override>():[]resource= array. resource:
        ID := ResourceID
        Props := map:
            "Base" => (Str of BaseSource?) or (Str of Base)
            "Extra" => (Str of ExtraSource?) or (Str of Extra)
            "Value" => Str of (Path("Base"), "Append", Path("Extra"))
            "Maybe Value" => (Str of (Path(MaybeSource?), "If True", Path("Value"))) or (Str of Path("Value"))
            "Alt Value" => (Str of AltSource?) or (Str of Alt)
            "Defaulted Value" => Str of (Path("Maybe Value"), "If Blank", Path("Alt Value"))
