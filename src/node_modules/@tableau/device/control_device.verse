
using. /Verse.org/Simulation
using. /Fortnite.com/Devices

using. Vertex

control_device<public> := class(tableau_device):
    @editable ReleasedActionID:?string = false
    @editable PressedActionID:?string = false
    @editable Input:input_trigger_device = input_trigger_device{}

    GetSideEffects<override>(State:scoped_state)<suspends>:[]side_effect= FilterOptions of array:
        option. Attach(ReleasedActionID?, Input.ReleasedEvent)
        option. Attach(PressedActionID?, Input.PressedEvent)
