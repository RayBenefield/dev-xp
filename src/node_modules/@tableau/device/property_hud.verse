
using. /Fortnite.com/UI
using. /Fortnite.com/Devices
using. /Verse.org/Simulation

using. Banding
using. Gooey
using. Vertex

property_hud<public> := class(tableau_device):
    @editable ResourceID<override>:string = ""
    @editable PropertyID:string = ""
    @editable Label:string = ""
    @editable VisibilitySource:?prop_path = false
    @editable HUDSettings:canvas_settings = canvas_settings{}

    GetSideEffects<override>(State:scoped_state)<suspends>:[]side_effect=
        Widget := WhiteText()
        State.GameState.AddUI(Widget, State.PlayerID, HUDSettings)

        FilterOptions of array:
            option. PushMsg(PropertyID, Prefixer("{Label}: ").FN, SetText(Widget).FN)
            option. PushBool(VisibilitySource?, SetVisibility(Widget).FN)
