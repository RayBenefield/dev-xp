
using. /Verse.org/Simulation
using. /Fortnite.com/Devices

source_to_trigger_v0_1 := class<concrete>():
    @editable Source:prop_path = prop_path{}
    @editable Triggers:[]prop_path = array{}

trigger_device_v0_1<public> := class(tableau_device):
    DeviceType<override>:string = "TRIGGER"

    @editable TrueTriggers:[]source_to_trigger_v0_1 = array{}
    @editable FalseTriggers:[]source_to_trigger_v0_1 = array{}

    GetSideEffects<override>(State:scoped_state)<suspends>:[]side_effect=
        for(T:TrueTriggers, Y:T.Triggers). TriggerActionOnTrue(T.Source, Y)
        for(T:FalseTriggers, N:T.Triggers). TriggerActionOnFalse(T.Source, N)
