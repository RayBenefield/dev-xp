
using. /Fortnite.com/UI
using. /Verse.org/Colors/NamedColors
using. /UnrealEngine.com/Temporary/UI
using. /UnrealEngine.com/Temporary/SpatialMath

using. Vertex

gooey<public> := interface(). Initialize<public>():widget

WhiteText<public><constructor>() := text_block:
    DefaultTextColor := White
    DefaultShadowOffset := option. vector2{X:=2.5,Y:=2.5}
    DefaultShadowColor := Black
    DefaultShadowOpacity := 1.0

LoudButton<public>(Text:string, Action:type{_():void}):text_button_base=
    Button := button_loud. DefaultText := Str2Msg(Text)
    PressButton := press_button. Action := Action
    Button.OnClick().Subscribe(PressButton.FN)
    Button

RegularButton<public>(Text:string, Action:type{_():void}):text_button_base=
    Button := button_regular. DefaultText := Str2Msg(Text)
    PressButton := press_button. Action := Action
    Button.OnClick().Subscribe(PressButton.FN)
    Button

press_button := class():
    Action<public>:type{_():void} = NOOP
    FN<public>(WidgetMessage:widget_message):void= Action()
