items_device<public> := class(creative_device, config_device):
    GetResources<override>():[]resource=
        for (Item:ItemTypes.Keys()):
            Settings := item_settings:
                ID := Item
                NeedsTarget := if(TargetableItems.Find[Item]). true else. false
            CreateItemResource(Settings)
