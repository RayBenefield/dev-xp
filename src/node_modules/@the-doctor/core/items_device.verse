
using. /Verse.org/Simulation
using. /Fortnite.com/Devices

using. Tableau
using. Vertex

item_settings<public> := class<concrete>():
    @editable ID<public>:string = "Item Name"
    @editable NeedsTarget<public>:logic = false

CreateItemResource<constructor>(I:item_settings) := resource:
    ID := I.ID
    Type := "Item"
    Props := map:
        "Needs Target" => Bool of I.NeedsTarget

items_device<public> := class(tableau_device):
    GetResources<override>():[]resource=
        for (Item:ItemTypes.Keys()):
            Settings := item_settings:
                ID := Item
                NeedsTarget := if(TargetableItems.Find[Item]). true else. false
            CreateItemResource(Settings)
