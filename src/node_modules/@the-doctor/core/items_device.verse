item_settings<public> := class<concrete>():
    @editable ID<public>:string = "Item Name"
    @editable NeedsTarget<public>:logic = false

CreateItemResource<constructor>(I:item_settings) := resource:
    ID := I.ID
    Type := "Item"
    Props := map:
        "Needs Target" => prop_bool. Default := I.NeedsTarget

