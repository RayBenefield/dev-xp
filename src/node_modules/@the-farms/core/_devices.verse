PlantAnim(Rotation:float):[]frame=
    GrowUp := Frame(ScaleTo(1.25)).SetTime(0.1).SetEasing(EaseIn)
    Shrink := Frame(ScaleTo(0.1), RotateYawTo(Rotation + 180.0), MoveZBy(-100.0)).SetTime(0.2).SetEasing(EaseIn)
    Reset := Frame(ScaleTo(), RotateYawTo(Rotation), MoveZTo()).SetTime(0.5).SetEasing(EaseOut)
    SquishDown := Frame(ScaleTo(0.5)).SetTime(0.1).SetEasing(EaseIn)
    SquishBack := Frame(ScaleTo()).SetTime(0.1).SetEasing(EaseOut)

    array{ Reset.SetTime(0.0), Shrink, Reset, SquishDown, SquishBack }

