
using. /Verse.org/Simulation
using. /Fortnite.com/Devices

using. Tableau
using. Vertex

plant_settings<public> := class<concrete>():
    @editable ID<public>:string = "Plant Name"
    @editable GrowthTime<public>:float = 1.0

CreatePlantResource<constructor>(S:plant_settings) := resource:
    ID := S.ID
    Type := "Plant"
    Props := map:
        "Growth Time" => Float of S.GrowthTime

plants_device<public> := class(tableau_device):
    GetResources<override>():[]resource= for (Plant:PlantTypes):
        CreatePlantResource of plant_settings:
            ID := Plant
            GrowthTime := GrowthTimes[Plant] or 100.0
