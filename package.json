{
    "name": "kikd",
    "description": "Continuous Integration and Continuous Deployment for Open Sourced NPM Tooling.",
    "version": "0.0.16",
    "homepage": "https://github.com/RayBenefield/kikd",
    "author": {
        "name": "Raymond Benefield",
        "email": "raymond.benefield@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/RayBenefield/kikd.git"
    },
    "bugs": {
        "url": "https://github.com/RayBenefield/kikd/issues"
    },
    "license": "MIT",
    "main": "src/index.js",
    "bin": {
        "kd": "src/cli.js"
    },
    "scripts": {
        "kd": "cd src/node_modules/ && ./kikd/cli.js",
        "prebuild": "npm run clean && mkdir -p dist/ && cp LICENSE readme.md dist/ && cat package.json | jq 'del(.babel,.devDependencies,.scripts,.config)' --indent 4 > dist/package.json",
        "build": "babel src/node_modules/kikd -d dist/src",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "clean": "rimraf dist",
        "lint": "npm-run-all lint:src lint:tests",
        "lint:src": "eslint -c .eslintrc.json src/node_modules --ignore-pattern 'src/node_modules/__tests__'",
        "lint:tests": "eslint -c src/node_modules/__tests__/.eslintrc.json src/node_modules/__tests__",
        "test": "cd src/node_modules && babel-tape-runner __tests__/{,**/}*.js | tap-spec",
        "sloc": "echo 'Lines of source code: ' && sloc src/node_modules/ -f json  --exclude __tests__ | jq '.summary.source'",
        "watch": "nodemon --watch ./src/node_modules --exec npm-run-all test lint sloc",
        "postrewrite": "./dx/rewrite-tags",
        "postversion": "js-beautify -r package.json && PACKAGE_VERSION=$(cat package.json | jq '.version' --raw-output) && git commit -a -m \"docs(version): Release v$PACKAGE_VERSION.\" -m '[skip ci]' && git tag \"v$PACKAGE_VERSION\""
    },
    "dependencies": {
        "es6-promisify": "^5.0.0",
        "meow": "^4.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-env": "^2.4.1",
        "babel-plugin-shebang": "^0.0.0",
        "babel-plugin-wildcard": "^2.1.2",
        "babel-tape-runner": "^2.0.1",
        "blue-tape": "^1.0.0",
        "commitlint": "^5.2.0",
        "eslint": "^3.19.0",
        "eslint-config-airbnb": "^15.0.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "^2.3.0",
        "eslint-plugin-jsx-a11y": "^5.0.3",
        "eslint-plugin-prettier": "^2.3.1",
        "eslint-plugin-react": "^7.1.0",
        "husky": "^0.14.3",
        "js-beautify": "^1.6.14",
        "node-jq": "^0.7.0",
        "nodemon": "^1.11.0",
        "npm-run-all": "^4.1.2",
        "prettier": "^1.9.1",
        "rimraf": "^2.6.1",
        "sloc": "^0.2.0",
        "tap-spec": "^4.1.1",
        "tape": "^4.8.0",
        "tape-bdd": "^0.0.1"
    }
}
